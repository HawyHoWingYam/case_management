# Case Management System - Development Environment Configuration
# This file contains development-specific settings with secure defaults

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Application URLs
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database
DATABASE_URL="postgresql://admin:dev_password@localhost:5432/case_management?schema=public"
DB_PASSWORD=dev_password

# Database Connection Pool Settings
DB_CONNECTION_LIMIT=10
DB_CONNECTION_TIMEOUT=30000

# PostgreSQL specific settings
POSTGRES_DB=case_management
POSTGRES_USER=admin
POSTGRES_PASSWORD=dev_password

# =============================================================================
# REDIS CONFIGURATION (Session & Cache)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# Redis Session Settings
REDIS_SESSION_TTL=86400
REDIS_KEY_PREFIX=case_mgmt_dev:

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration (Development keys - DO NOT use in production)
JWT_SECRET=dev-jwt-secret-key-change-in-production-12345
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production-67890
SESSION_MAX_AGE=86400000

# Password Hashing
BCRYPT_ROUNDS=10

# Rate Limiting (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# FILE STORAGE (MinIO for Development)
# =============================================================================
# MinIO Configuration (Local S3-compatible storage)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_ENDPOINT=http://localhost:9000
MINIO_BUCKET=case-documents
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# =============================================================================
# EMAIL CONFIGURATION (MailHog for Development)
# =============================================================================
# SMTP Configuration (MailHog for local email testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=

# Email Templates
EMAIL_TEMPLATE_NEW_CASE=new-case-notification
EMAIL_TEMPLATE_ASSIGNMENT=case-assignment
EMAIL_TEMPLATE_STATUS_CHANGE=status-change

# SendGrid (Leave empty for development)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=dev@localhost
SENDGRID_FROM_NAME="Case Management System (Dev)"

# =============================================================================
# N8N AUTOMATION INTEGRATION
# =============================================================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=
N8N_BASE_URL=http://localhost:5678

# Webhook Authentication
WEBHOOK_SECRET=dev-webhook-secret-key

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Sentry Error Tracking (Disabled for development)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# New Relic APM (Disabled for development)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=case-management-system-dev

# Google Analytics (Disabled for development)
NEXT_PUBLIC_GA_TRACKING_ID=

# Health Check Settings
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# pgAdmin
PGADMIN_EMAIL=admin@localhost
PGADMIN_PASSWORD=admin123

# =============================================================================
# FEATURE FLAGS (All enabled for development testing)
# =============================================================================
FEATURE_ADVANCED_REPORTING=true
FEATURE_BULK_OPERATIONS=true
FEATURE_AUDIT_TRAIL=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_FILE_UPLOADS=true

# =============================================================================
# API RATE LIMITING & THROTTLING (Relaxed for development)
# =============================================================================
# Global rate limits
API_RATE_LIMIT_POINTS=1000
API_RATE_LIMIT_DURATION=60

# Specific endpoint limits
AUTH_RATE_LIMIT_POINTS=50
AUTH_RATE_LIMIT_DURATION=900

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Application-level caching (Shorter TTL for development)
CACHE_TTL_DEFAULT=60
CACHE_TTL_USER_DATA=120
CACHE_TTL_REPORTS=300

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Notification preferences
NOTIFICATION_QUEUE_ENABLED=true
NOTIFICATION_RETRY_ATTEMPTS=3
NOTIFICATION_RETRY_DELAY=5000

# =============================================================================
# LOGGING CONFIGURATION (Verbose for development)
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_MAX_FILES=3
LOG_MAX_SIZE=10m

# Log destinations
LOG_FILE_ENABLED=true
LOG_CONSOLE_ENABLED=true
LOG_REMOTE_ENABLED=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Database query optimization
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=60000

# HTTP request timeouts
HTTP_TIMEOUT=30000
HTTP_KEEPALIVE_TIMEOUT=5000

# =============================================================================
# SECURITY HEADERS (Relaxed for development)
# =============================================================================
# Content Security Policy
CSP_ENABLED=false
CSP_REPORT_ONLY=true

# HSTS (Disabled for development)
HSTS_MAX_AGE=0
HSTS_INCLUDE_SUBDOMAINS=false

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
# Hot reload and development tools
NEXT_TELEMETRY_DISABLED=1
DISABLE_ESLINT_PLUGIN=false
TYPESCRIPT_CHECK=true

# Debug settings (Enabled for development)
DEBUG_SQL=true
DEBUG_PERFORMANCE=true
DEBUG_MEMORY=false

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database
TEST_DATABASE_URL="postgresql://admin:dev_password@localhost:5432/case_management_test"

# Test data settings
TEST_DATA_SEED=true
TEST_CLEANUP_AFTER=true

# Coverage thresholds
COVERAGE_THRESHOLD_STATEMENTS=90
COVERAGE_THRESHOLD_BRANCHES=85
COVERAGE_THRESHOLD_FUNCTIONS=90
COVERAGE_THRESHOLD_LINES=90