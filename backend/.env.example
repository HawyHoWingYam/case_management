# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration (Docker PostgreSQL)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=case_mgmt_user
DB_PASSWORD=case_mgmt_password
DB_NAME=case_management_dev
DB_SSL=false

# Test Database Configuration
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_USERNAME=case_mgmt_user
TEST_DB_PASSWORD=case_mgmt_password
TEST_DB_NAME=case_management_test

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (Docker Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS LocalStack Configuration (for S3-like storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566
S3_BUCKET_NAME=case-management-documents

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/application.log

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt