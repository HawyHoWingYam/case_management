# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/case_management_db?schema=public"

# JWT Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Logging Configuration
LOG_LEVEL=info

# n8n Automation Configuration
N8N_WEBHOOK_URL=http://localhost:5678/webhook

# AWS S3 Configuration (for file uploads - to be implemented later)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=case-management-documents

# SendGrid Configuration (for email notifications - to be implemented later)
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourcompany.com