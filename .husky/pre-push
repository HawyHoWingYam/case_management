#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🚀 Running pre-push checks..."

# Run full test suite
echo "🧪 Running full test suite..."
npm run test

# Run security audit
echo "🔒 Running security audit..."
npm run audit

# Run build to ensure everything compiles
echo "🏗️ Testing build process..."
npm run build

echo "✅ Pre-push checks passed!"