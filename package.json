{
  "name": "case-management-system",
  "version": "1.0.0",
  "description": "Comprehensive case management system for social services",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run start:dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && npm run start:prod",
    "start:frontend": "cd frontend && npm start",
    "test": "./scripts/test-all.sh",
    "test:unit": "concurrently \"npm run test:unit:backend\" \"npm run test:unit:frontend\"",
    "test:unit:backend": "cd backend && npm run test:unit",
    "test:unit:frontend": "cd frontend && npm run test",
    "test:integration": "cd backend && npm run test:integration",
    "test:e2e": "npm run test:e2e:headless",
    "test:e2e:open": "cypress open",
    "test:e2e:headless": "cypress run",
    "test:coverage": "./scripts/coverage-report.sh",
    "test:watch": "concurrently \"npm run test:watch:backend\" \"npm run test:watch:frontend\"",
    "test:watch:backend": "cd backend && npm run test:watch",
    "test:watch:frontend": "cd frontend && npm run test:watch",
    "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:fix": "concurrently \"npm run lint:fix:backend\" \"npm run lint:fix:frontend\"",
    "lint:fix:backend": "cd backend && npm run lint -- --fix",
    "lint:fix:frontend": "cd frontend && npm run lint -- --fix",
    "audit": "concurrently \"npm run audit:backend\" \"npm run audit:frontend\"",
    "audit:backend": "cd backend && npm audit",
    "audit:frontend": "cd frontend && npm audit",
    "docker:dev": "./scripts/docker-dev.sh",
    "docker:test": "docker-compose -f docker-compose.test.yml up -d",
    "docker:test:down": "docker-compose -f docker-compose.test.yml down -v",
    "db:setup": "docker-compose -f docker-compose.dev.yml up -d postgres redis",
    "db:migrate": "cd backend && npm run migration:run",
    "db:seed": "cd backend && npm run seed",
    "clean": "npm run clean:coverage && npm run clean:logs && npm run clean:dist",
    "clean:coverage": "rm -rf coverage backend/coverage frontend/coverage",
    "clean:logs": "rm -rf logs/*.log",
    "clean:dist": "rm -rf backend/dist frontend/.next",
    "precommit": "npm run lint && npm run test:unit",
    "prepare": "echo 'husky install skipped'"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^3.0.0",
    "wait-on": "^7.0.1"
  },
  "lint-staged": {
    "backend/**/*.{ts,js}": [
      "cd backend && npm run format",
      "cd backend && npm run lint -- --fix",
      "cd backend && npm run test -- --passWithNoTests --findRelatedTests"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && npm run format",
      "cd frontend && npm run lint -- --fix",
      "cd frontend && npm run test -- --passWithNoTests --findRelatedTests"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "case-management",
    "social-services",
    "nextjs",
    "nestjs",
    "typescript",
    "postgresql",
    "redis"
  ],
  "author": "Case Management System Team",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/case-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/case-management-system/issues"
  },
  "homepage": "https://github.com/your-org/case-management-system#readme"
}